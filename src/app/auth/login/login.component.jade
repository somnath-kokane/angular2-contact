.row('*ngIf'='user')
  .col-md-6
    form.form-horizontal('#loginForm'='ngForm' '(ngSubmit)'='onSubmit()')
      .form-group
        label(for='email')
        input.form-control(type='text' required name='email'
          '[(ngModel)]'='user.email' #email='ngModel')
      .form-group
        label(for='password')
        input.form-control(type='password' required name='password'
          '[(ngModel)]'='user.password' #password='ngModel')
      div
        a.btn.btn-default(routerLink='../../') Cancel
        button.btn.btn-primary.pull-right(type='submit' '[disabled]'='!loginForm.form.valid') Login